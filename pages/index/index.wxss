.top_info{
  position: relative;
  color: #fff;
}
.top_info_con{
  position: absolute;
  display: flex;
  padding: 0 60rpx;
  top: 0;
  left: 0;
  right: 0;
  height: 160rpx;
  align-items: center;
}
.top_info_bg{
  display: block;
  width: 100%;
  height: 160rpx;
}
.top_info_header{
  width: 76rpx;
  height: 76rpx;
  margin-right: 28rpx;
}
.top_info_con .name{
  display: block;
}
.top_info_con .dis{
  padding-right: 5px;
  font-size: 26rpx;
  opacity: .7;
}

.camera_container{
  width: 100%;
  height: calc(100% - 160rpx);
}
.camera{
  width: 100%;
  height: 100%;
}
.camera_front {
  position: relative;
  top: 0;
  height: 100%;
}
.zheng_process{
  padding: 32rpx 76rpx;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.zheng_step{
  width: 86rpx;
  font-size: 28rpx;
  text-align: center;
  color: rgba(113, 113, 113, 1);
}
.zheng_step.active{
  color: rgba(29, 119, 222, 1);
  font-weight:500;
}
.zheng_step .text{
  display: block;
  margin-top: 8px;
}
.step_line{
  width:122rpx;
  height:2px;
  margin-top: -43rpx;
  background:rgba(235,236,241,1);
}
.step_line.active{
  background: rgba(29, 119, 222, 1);
}

.controls{
  position: absolute;
  bottom: 11rpx;
  left: 0;
  right: 0;
  font-size: 26rpx;
  text-align: center;
}
.camera_btn{
  display: block;
  width: 148rpx;
  height: 148rpx;
  margin: 0 auto;
}
.camera_switch{
  position: absolute;
  right: 64rpx;
  bottom: 32rpx;
  width: 68rpx;
  height: 68rpx;
}
.she_tishi{
  position: absolute;
  left: 218rpx;
  top: 34%;
  width: 316rpx;
  height: 252rpx;
}
.mengban{
  display: block;
  width: 100%;
  height: 100%;
}